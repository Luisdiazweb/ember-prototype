{{#unless @message.mine}}
<div class="w-full flex justify-start my-1">
    <div class="mx-0 p-4 bg-purple-600 text-white max-w-xs rounded-md">
        {{@message.content}}
    </div>
</div>
{{else}}
<div class="w-full flex justify-end my-1">
    <div class="mx-0 p-4 bg-gray-200 text-black max-w-xs rounded-md">
        {{@message.content}}
    </div>
</div>
{{/unless}}
