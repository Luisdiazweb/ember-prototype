{{#unless @message.mine}}
<div class="w-full flex py-1 flex-col justify-start">
    <div class="mx-0 p-4 bg-purple-600 text-white max-w-xs rounded-md shadow-md">
        <div class="font-bold">{{@message.content}}</div>
        <div class="text-xs">{{@message.date}}</div>
    </div>
    {{#if @message.showAvatar}}
    <div class="flex flex-col mr-auto mt-3">
        <div class="avatar grid justify-center content-center placeholder">
            <div class="w-8 h-8 rounded-full ring ring-primary ring-offset-base-100 ring-offset-2 grid justify-center content-center bg-slate-800 text-white flex items-center">
                {{#if @message.avatar}}
                    <img src="{{@message.avatar}}" />
                {{else}}
                    <span class="text-3xl">{{substring @message.contactName start=0 end=1}}</span>
                {{/if}}
            </div>
        </div>
    </div>
    {{/if}}
</div>
{{else}}
<div class="w-full flex py-1 flex-col justify-end">
    <div class="mx-0 p-4 bg-gray-200 text-black max-w-xs rounded-md flex flex-col shadow-md ml-auto">
        <div class="font-bold">{{@message.content}}</div>
        <div class="text-xs">{{@message.date}}</div>
    </div>
    {{#if @message.showAvatar}}
    <div class="flex flex-col ml-auto mt-3">
        <div class="avatar grid justify-center content-center placeholder">
            <div class="w-8 h-8 rounded-full ring ring-primary ring-offset-base-100 ring-offset-2 grid justify-center content-center bg-slate-800 text-white flex items-center">
                {{#if @message.avatar}}
                    <img src="{{@message.avatar}}" />
                {{else}}
                    <span class="text-3xl">{{substring @message.contactName start=0 end=1}}</span>
                {{/if}}
            </div>
        </div>
    </div>
    {{/if}}
</div>
{{/unless}}
